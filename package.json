{
  "name": "broad-sdk",
  "version": "1.0.0",
  "description": "A comprehensive SDK library with web monitoring and server utilities",
  "private": true,
  "devDependencies": {
    "lerna": "^4.0.0",
    "prettier": "^2.8.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "build:web-sdk": "lerna exec --scope @yu1596882018/web-sdk yarn build",
    "build:server-sdk": "lerna exec --scope @yu1596882018/server-sdk yarn build",
    "clean": "lerna clean",
    "publish": "lerna publish",
    "test": "lerna run test",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,vue,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,vue,json,md,yml,yaml}\"",
    "dev": "lerna run dev --parallel"
  },
  "engines": {
    "node": ">=12.0.0",
    "yarn": ">=1.22.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yu1596882018/broad-sdk.git"
  },
  "keywords": [
    "sdk",
    "monitoring",
    "web",
    "server",
    "javascript",
    "vue"
  ],
  "author": "yu1596882018 <1596882018@qq.com>",
  "license": "MIT"
}
